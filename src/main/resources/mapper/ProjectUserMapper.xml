<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.ProjectUserMapper">

  <resultMap id="ProjectUserResult" type="com.example.demo.mapper.ProjectUser">
    <id property="id" column="id" />
    <result property="username" column="username" />
    <result property="password" column="password" />
    <result property="enabled" column="enabled" />
    <result property="roles" column="roles" />
  </resultMap>

  <select id="findByUsername" parameterType="string" resultMap="ProjectUserResult">
    SELECT id, username, password, enabled, roles
    FROM project_users
    WHERE username = #{username}
  </select>

  <insert id="insert" parameterType="com.example.demo.mapper.ProjectUser" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO project_users (username, password, enabled, roles)
    VALUES (#{username}, #{password}, #{enabled}, #{roles})
  </insert>

</mapper>
